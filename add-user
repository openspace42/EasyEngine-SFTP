#!/bin/bash

# Set bash environment error management

set -e
set -u

# Source local functions file

script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. $script_dir/functions

# Check for root user runtime

check_root

################################################################################

# Source openspace functions file

source_os_functions

################################################################################

os-define_formatting

define_vars

echo

################################################################################

if [ $# -eq 0 ]
then
        echo "${r}${b}No argument supplied for function | ${FUNCNAME[0]} |.${x}"
        echo
        os-exit_function
fi

################################################################################

echo "${b}Adding SFTP user | ${g}$1${x}${b} |..."
echo

adduser --gecos "" $1
adduser $1 $sftp_group

echo "${b}Finished adding SFTP user."
echo
